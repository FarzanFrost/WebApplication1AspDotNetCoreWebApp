@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            @*Here when the link is click, the asp will check on the Category controller, then find the create action to navigate*@
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count() > 0)
    {
        <table class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                        <tr>
                            <td width="50%">@obj.Name</td>
                            <td width="30%">@obj.DisplayOrder</td>
                            <td>
                                <div class="w-75 btn-group" role="group">
                                    @*Here the asp-route-Id depends on the variable you want to incoporate, so it will be like asp-route-variableName*@
                                    @*Using this asp-route-Id we add the Id of the row. here obj is for each loop variable*@
                                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-dark mx-2">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <a asp-controller="Category" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category Exists</p>
    }
</div>

