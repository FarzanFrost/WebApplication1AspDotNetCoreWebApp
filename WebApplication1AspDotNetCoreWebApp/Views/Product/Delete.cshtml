@model Product

@*since we are using images, we add enctype with this value*@
<form method="post" enctype="multipart/form-data" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pt-3">Delete Product</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-8">
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" disabled/>
                </div>

            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="Price"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Price" class="form-control" disabled/>
                </div>

            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="Description"></label>
                </div>
                <div class="col-8">
                    <textarea asp-for="Description" class="form-control summernote"></textarea>
                </div>

            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Category.Name" class="form-control" disabled />
                </div>

            </div>
            <div class="form-group row p-2">
                <div class="col-4">
                    <label asp-for="ApplicationTypeId"></label>
                </div>
                <div class="col-8">
                    <input asp-for="ApplicationType.Name" class="form-control" disabled />
                </div>

            </div>
            <div class="form-group row p-2">
                <div class="col-8 offset-4 row">

                    <div class="col">
                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success w-100">
                            <i class="fa-solid fa-right-from-bracket"></i> &nbsp; Back
                        </a>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-4 pt-4">
            @*keep this empty*@
            @if (Model.Id != 0)
            {
                <img src="@WC.ImagePath@Model.Image" width="100%" style="border-radius:5px; border: 1px solid #bbb" />
            }
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        //To use summernote we need to add this code
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disble:true,
            });
        });

        const validateInput = () => {
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire(
                    'Error!',
                    'Please upload an Image!',
                    'error'
                )
                return false;
            }
            return true;
        }
    </script>
}